# GEXA Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# SUPABASE DATABASE
# ===================
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres
DATABASE_ASYNC_URL=postgresql+asyncpg://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# ===================
# SUPABASE AUTH
# ===================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===================
# GEMINI API
# ===================
GEMINI_API_KEY=your_gemini_api_key_here
LLM_MODEL=gemini-2.5-flash

# ===================
# REDIS (Optional)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# API SETTINGS
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ===================
# SECURITY
# ===================
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_SALT=gexa-api-key-salt

# ===================
# CRAWLER SETTINGS
# ===================
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=GexaBot/1.0 (+https://gexa.ai)

# ===================
# EMBEDDING SETTINGS
# ===================
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
