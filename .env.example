# GEXA Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/gexa
DATABASE_ASYNC_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/gexa

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Redis (optional, for task queue)
REDIS_URL=redis://localhost:6379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_SALT=gexa-api-key-salt

# Crawler Settings
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=GexaBot/1.0 (+https://gexa.ai)

# Embedding Settings
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
